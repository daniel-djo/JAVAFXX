<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.game.controllers.GameMapSelectionController" id="gameMenu">
    <children>
        <Button text="Back to Menu" onAction="#switchToMainMenu" styleClass="button"/>
        <HBox spacing="10" alignment="CENTER">
            <Button id="imagemap1" text="Option 1" onAction="#createMapLI" styleClass="imagemap1"/>
            <Button id="imagemap2" text="Option 2" onAction="#createMapES" styleClass="imagemap2"/>
            <Button id="imagemap3" text="Option 3" onAction="#createMapPD" styleClass="imagemap3"/>
        </HBox>
    </children>
</VBox>
